<div class="container p-4">
    <div class="row">
        <div class="col-md-16 mx-auto">
            <div class="card-body">
                <h1>
                    <center>TABLA DE INGRESOS</center>
                </h1>
                <table class="table respomsive">
                    <thead>
                        <tr>
                            <th scope="col">id</th>
                            <th scope="col">directiva</th>
                            <th scope="col">concepto</th>
                            <th scope="col">descripcion</th>
                            <th scope="col">valor</th>
                            <th scope="col">#</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each ingresos}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{directiva}}</td>
                            <td>{{concepto}}</td>
                            <td>{{descripcion}}</td>
                            <td>{{valor}}</td>
                            <td>
                                <a href="/ingresos/delete/{{id}}" class="btn btn-success btn-info btn-lg">Eliminar</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-sm-5">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"> volver a opciones</h5>
                            <a href="/opciones/opciones" class="btn btn-success btn-info btn-lg">Ir Aqui...</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Registrar</h5>
